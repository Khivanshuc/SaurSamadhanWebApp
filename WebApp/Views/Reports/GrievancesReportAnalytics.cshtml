<style>

    body{
        background-color:#ffffff !important;
    }

    .layout-container {
        background-image: none;
    }

    #last7dayBtn {
        color: black;
        background-color: white;
        border-radius: 10px;
        border: 2px solid #ced4da;
    }

    #last7dayBtn:hover {
        color: white;
        background-color: #4D7FFD;
    }

    /* Universal Loader CSS */
    #universalLoader {
        display: none; /* Hidden by default */
        position: fixed;
        z-index: 9999;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.9);
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .spinner {
        width: 64px;
        height: 64px;
        border: 8px solid rgba(0, 0, 0, 0.1);
        border-left-color: #3498db;
        border-radius: 50%;
        animation: spin 1.2s linear infinite;
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

</style>
<div id="universalLoader">
    <div class="spinner"></div>
</div>

<div class="container-fluid ">
    <div class="py-2">
        <h4>Grievances Chart</h4>
    </div>
    <div style="display:none">
        <div class="row d-flex justify-content-end">

            <div class="col-12 col-md-6 col-lg-2 d-flex justify-content-end" id="down">
                <button id="last7dayBtn">Last 7 Days</button>
            </div>

            <div class="col-12 col-md-6 col-lg-2" id="down">
                <select id="District" class="form-control custom-dropdown">
                    <option selected>Select Month</option>
                </select>
                <span class="dropdown-arrow"></span>
            </div>

            <div class="col-12 col-md-6 col-lg-2" id="down">
                <select id="District" class="form-control custom-dropdown">
                    <option selected>Status</option>
                    <option value="">Pending</option>
                    <option value="">Resolve</option>
                </select>
                <span class="dropdown-arrow"></span>
            </div>

            <!-- Start Date Picker column -->
            <div class="col-12 col-md-6 col-lg-2">
                <div class="d-flex align-items-center">
                    <!-- Date Picker Input -->
                    <input type="date" id="StartDate" class="form-control custom-dropdown">
                    <span id="dropdownarrow"></span>
                </div>
            </div>

            <!-- Last Date Picker column -->
            <div class="col-12 col-md-6 col-lg-2">
                <div class="d-flex align-items-center">
                    <!-- Date Picker Input -->
                    <input type="date" id="EndDate" class="form-control custom-dropdown">
                    <span id="dropdownarrow"></span>
                </div>
            </div>
        </div>
    </div>

    <div class=" row pt-2">
        <canvas id="myChart" width="1500" height="500"></canvas>
    </div>

    <div id="GrievanceReportPartialView"> </div>

</div>

@section PageScripts {
    <script src="~/js/chart.js"></script>
    <script src="~/js/grievancesreportanalytics.js"></script>
}