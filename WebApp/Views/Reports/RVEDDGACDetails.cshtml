    }

    #set-secondrow-img {
        justify-content: space-evenly;
    }

    .clickable-image {
        border-radius: 14px;
        cursor: pointer;
        transition: transform 0.2s;
    }

        .clickable-image:hover {
            transform: scale(1.05);
        }

    .image-label {
        position: relative;
        right: 4.5pc;
        width: 17pc;
        margin-top: 10px;
        font-weight: bold;
        text-align: center;
    }

    }

