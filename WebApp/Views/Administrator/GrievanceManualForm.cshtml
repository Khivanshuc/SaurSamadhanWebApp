<div class="row justify-content-center mt-md-3">
    <div class="col-12">
        <form id="ManualGrievanceForm" class="py-3 px-5 border rounded shadow-sm bg-light w-100">
            <h4 class="mb-4 text-center">Manual Grievance</h4>

            <div class="row">
                <div class="form-group mb-3 col-12 col-md-6">
                    <label class="form-label">जिला</label>
                    <select id="District" name="district" class="form-control" required>
                        <option value="">जिला का चयन करे</option>
                    </select>
                </div>
                <div class="form-group mb-3 col-12 col-md-6">
                    <label class="form-label">विकाशखण्ड</label>
                    <select id="Block" name="block" class="form-control" required>
                        <option value="">विकाशखण्ड का चयन करे</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="form-group mb-3 col-12 col-md-6">
                    <label class="form-label">ग्राम</label>
                    <select id="Village" name="village" class="form-control" required>
                        <option value="">ग्राम का चयन करे</option>
                    </select>
                </div>
                <div class="form-group mb-3 col-12 col-md-6">
                    <label class="form-label">क्षेत्र</label>
                    <select id="Region" name="region" class="form-control" required>
                        <option value="">क्षेत्र का चयन करे</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="form-group mb-3 col-12 col-md-6">
                    <label class="form-label">आवेदक का नाम</label>
                    <input id="ApplicantName" name="applicantName" class="form-control" required />
                </div>
                <div class="form-group mb-3 col-12 col-md-6">
                    <label class="form-label">शिकायत समबंधित जगह</label>
                    <input id="Area" name="area" class="form-control" required />
                </div>
            </div>

            <div class="row">
                <div class="form-group mb-3 col-12 col-md-6">
                    <label class="form-label">योजना</label>
                    <select id="Project" name="project" class="form-control" required>
                        <option value="">योजना का चयन करे</option>
                    </select>
                </div>
                <!-- Dropdown Site -->
                <div id="DropDownSite" class="form-group mb-3 col-12 col-md-6">
                    <label class="form-label">स्थान</label>
                    <select id="Site" name="site" class="form-control" required>
                        <option value="">स्थान चयन करे</option>
                    </select>
                </div>

                <!-- Textbox Site -->
                <div id="InputSite" name="inputSite" class="form-group mb-3 col-12 col-md-6" style="display:none">
                    <label class="form-label">स्थान</label>
                    <input type="text" id="SiteText" name="siteText" class="form-control" required />
                </div>

            </div>

            <div class="row">
                <div class="form-group mb-3 col-12 col-md-6">
                    <label class="form-label">संयत्र की स्तिथि</label>
                    <select id="SystemWorkingStatus" name="systemWorkingStatus" class="form-control" required>
                        <option value="">चयन करे</option>
                    </select>
                </div>
                <div class="form-group mb-3 col-12 col-md-6">
                    <label class="form-label">फ़ोन नंबर</label>
                    <input type="text" class="form-control" name="contactNumber" id="ContactNumber" required />
                </div>
            </div>

            <div class="row">
                <div class="form-group mb-3 col-12 col-md-6">
                    <label class="form-label">समस्या का विवरण</label>
                    <textarea class="form-control" id="Remark" name="remark" required style="resize: none"></textarea>
                </div>
                <div class="form-group mb-3 col-12 col-md-6">
                    <label class="form-label">समस्या का फोटोग्राफ</label>
                    <input type="file" class="form-control" name="image" id="ImageInput"/>
                    <img id="imagePreview" alt="Image Preview" style="display:none; margin-top:10px; max-width: 20%; height: auto;" />
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-12 text-center">
                    <button class="btn btn-primary" type="submit">Submit</button>
                </div>
            </div>

        </form>
    </div>
</div>
