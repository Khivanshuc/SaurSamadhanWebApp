<style>
    #ReportLoader {
        display: none !important;
        position: fixed;
        z-index: 9999;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.9);
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .loader {
        text-align: center;
        line-height: 86px;
        text-align: center;
        position: relative;
        padding: 0 48px;
        font-size: 30px;
        font-family: Arial, Helvetica, sans-serif;
        color: #566a7f;
    }

        .loader:before, .loader:after {
            content: "";
            display: block;
            width: 15px;
            height: 15px;
            background: currentColor;
            position: absolute;
            animation: load .7s infinite alternate ease-in-out;
            top: 0;
        }

        .loader:after {
            top: auto;
            bottom: 0;
        }

    @@keyframes load {
        0% {
            left: 0;
            height: 43px;
            width: 15px;
            transform: translateX(0)
        }

        50% {
            height: 10px;
            width: 40px
        }

        100% {
            left: 100%;
            height: 43px;
            width: 15px;
            transform: translateX(-100%)
        }
    }
</style>

<div id="ReportLoader">
    <span class="loader">Downloading Report.... </span>
</div>

<div id="CmnReportPartialView"></div>


<script src="~/vendor/libs/jquery/jquery.js"></script>
<script src="~/js/downloadreports.js"></script>
<script src="~/js/Grievances.js"></script>
<script src="~/js/Report.js"></script>





<script>
    $(document).ready(function () {

        var reportData = localStorage.getItem('cmnReportData');

        if (reportData) {
            $('#CmnReportPartialView').html('');
            $('#CmnReportPartialView').html(reportData);
        }

        window.addEventListener('beforeunload', function () {
            localStorage.removeItem('cmnReportData');
        });

        //$("button").hide();
    });
</script>