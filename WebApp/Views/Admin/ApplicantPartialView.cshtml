@model WebApp.Models.UserVwModel
@*
<h4>UserModel</h4>
<hr /> *@


@section PageScripts {
    <script src="~/js/Admin.js"></script>
}
<div class="row justify-content-center mt-md-3">
    <div class="col-md-12">
        <form asp-action="View" class="p-4 border rounded shadow-sm bg-light" style="width: 100%;">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <h4>Register New User</h4>

            <div class="d-flex justify-content-around">
                <div class="form-group mb-3 col-md-5">
                    <label class="form-label">UserName</label>
                    <input id="userName" class="form-control flex-grow-1" />
                    <span id="userNameError" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 col-md-5">
                    <label class="form-label">Email</label>
                    <input id="emailId" class="form-control flex-grow-1" />
                    <span id="emailError" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-around">
                <div class="form-group mb-3 col-md-5">
                    <label class="form-label">MobileNumber</label>
                    <input type="text" id="mobileNumber" class="form-control flex-grow-1" maxlength="10" />
                    <span id="mobileError" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 col-md-5">
                    <label class="form-label">Role</label>
                    <select id="RoleId" class="form-control">
                        <option value="">Select Role</option>
                    </select>
                    <span id="roleError" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-around">
                <div class="form-group mb-3 col-md-5">
                    <label class="form-label">District</label>
                    <select id="DistrictId" class="form-control" onchange="DistrictClicked()">
                        <option value="">Select District</option>
                    </select>
                </div>
                <div class="form-group mb-3 col-md-5">
                    <label class="form-label">Block</label>
                    <select id="BlockId" class="form-control" onchange="BlockClicked()">
                        <option value="">Select Block</option>
                    </select>
                    <span asp-validation-for="BlockId" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-around">
                <div class="form-group mb-3 col-md-5">
                    <label class="form-label">Office Level</label>
                    <select id="OfficeLevelId" class="form-control" onchange="GetZonal()">
                        <option value="">Select Office Level</option>
                    </select>
                </div>
                <div class="form-group mb-3 col-md-5">
                    <label class="form-label">Select Zonal</label>
                    <select id="ZonalId" class="form-control" disabled>
                        <option value="">Select Zonal</option>
                    </select>
                </div>
            </div>

            <div class="d-flex justify-content-around" style="display:none!important">
                <div class="form-group mb-3 col-md-5 d-flex ">
                    <input type="checkbox" id="districtInchargeCheckBox" name="districtInchargeCheckBox" class="me-2" />
                    <label for="districtInchargeCheckBox" class="form-label mb-0">Are you District Incharge ?</label>
                </div>
                <div class="form-group mb-3 col-md-5">
                    <label class="form-label"></label>
                </div>
            </div>

            <div class="d-flex justify-content-around">
                <div class="form-group mb-4 ">
                    <a onclick="AddUser()" style="color:white" class="btn btn-primary">Create</a>
                    <a class="btn btn-primary" style="color:white" onclick="UserlistShow()">Go to User List</a>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/admin.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        // Function to fetch districts and blocks
        GetRoles();
        fetchDist();
        fetchOfficeLevel();
        $("#mobileNumber").on("input", function () {
            this.value = this.value.replace(/[^0-9]/g, '');
        });
    });
</script>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
