@model List<WebApp.Models.ShowProjectReportModel>

@{
    Layout = "_BlankLayout";
}
<div class="row justify-content-center mt-md-3">
    <div class="col-md-12">
        <form class="p-4 border rounded shadow-sm bg-light" style="width: 100%;">
            <div class="card-body">
                <div class="table-responsive" style="height:60vh">
                    <table class="table table-hover table-bordered" style="max-height:60vh; overflow:auto;width:100%;">
                        <thead style="position: sticky; top: 0; z-index: 1; background:#00CCDD;color:white !important">
                            <tr>
                                <th style="color:white; width:5%;">Inspection Id</th>
                                <th style="color:white; width:5%;">Project Name</th>
                                <th style="color:white; width:5%;">District</th>
                                <th style="color:white; width:5%;">Block</th>
                                <th style="color:white; width:5%;">Village Name</th>
                                <th style="color:white; width:15%;">Site Name</th>
                                <th style="color:white; width:10%;">SI Name</th>
                                <th style="color:white; width:4%;">Inspection Date</th>
                                <th style="color:white; width:4%;">Working Status</th>
                                <th style="color:white; width:4%;">Fault Remark</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                if (Model.Count > 0)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>  @item.Id</td>
                                            <td>  @item.ProjectName</td>
                                            <td>  @item.DistrictName</td>
                                            <td>  @item.BlockName</td>
                                            <td>  @item.VillageName</td>
                                            <td>  @item.SiteName</td>
                                            <td>  @item.SIName</td>
                                            <td>  @item.InspectionDate</td>
                                            <td>  @item.WorkingStatus</td>
                                            <td>  @item.FaultyRemark</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="8" style="text-align:center">
                                            No Record Found
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </form>
    </div>
</div>

