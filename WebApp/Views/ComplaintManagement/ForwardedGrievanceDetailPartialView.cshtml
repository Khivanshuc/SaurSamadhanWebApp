        }

        .image-grid img {
            width: 100%;
            height: 10pc;
        }

    .clickable-image {
        border-radius: 14px;
        cursor: pointer;
        transition: transform 0.2s;
    }

        .clickable-image:hover {
            transform: scale(1.05);
        }

    }
</style>

