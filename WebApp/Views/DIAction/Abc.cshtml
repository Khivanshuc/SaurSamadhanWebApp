<style>
    /* Universal Loader CSS */
    #universalLoader {
        display: none; /* Hidden by default */
        position: fixed;
        z-index: 9999;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.9);
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .spinner {
        width: 64px;
        height: 64px;
        border: 8px solid rgba(0, 0, 0, 0.1);
        border-left-color: #3498db;
        border-radius: 50%;
        animation: spin 1.2s linear infinite;
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }
</style>
<div id="universalLoader">
    <div class="spinner"></div>
</div>
<div class="row justify-content-center mt-md-3">
    <div class="col-md-12">
        <form asp-action="View" class="p-4 border  shadow-sm bg-light" style="width: 100%;">
            <div class="card-body">
                <h4 class="card-title mb-4 text-center">Report ABC List List</h4>
                <div class="table-responsive">
                </div>
            </div>
        </form>
    </div>
</div>
<div id="ReportPartialView"></div>
