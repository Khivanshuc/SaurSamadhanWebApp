@model List<WebApp.Models.VwTestModel>
<div class="row justify-content-center ">
    <div class="col-md-12">
        <form asp-action="View" class=" border shadow-sm bg-light" style="width: 100%;">
            <div class="card-body">
                @* <h4 class="card-title mb-4">Grievances List</h4> *@
                <div class="table-responsive" style="height:60vh">
                    <table class="table table-hover table-bordered" style="max-height:60vh; overflow:auto;width:100%;">
                        <thead style="position: sticky; top: 0; z-index: 1; background:#003c00;color:white !important">
                            <tr>
                                <th style="color:white; width:5%;">Id</th>
                                <th style="color:white; width:5%;">Status</th>
                                <th style="color:white; width:5%;">SI Name</th>
                                <th style="color:white; width:1%;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                if (Model.Count > 0)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>  @item.Id</td>
                                            <td>  @item.ComDT</td>
                                            <td>  @item.Phase</td>
                                            <td>
                                                <div class="dropdown">
                                                    <button class="btn p-0" type="button" id="cardOpt3" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        <i class="bx bx-dots-vertical-rounded"></i>
                                                    </button>
                                                    <div class="dropdown-menu dropdown-menu-end dropdown-menu-right" aria-labelledby="cardOpt3">
                                                        <a class="dropdown-item" style="cursor:pointer;" onclick="EditGrievances(@item.Id)">Edit</a>
                                                        <a class="dropdown-item" style="cursor:pointer;" onclick="GrirvancesDetails(@item.Id)">View More</a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="8" style="text-align:center">
                                            No Data Found
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </form>
    </div>
</div>
