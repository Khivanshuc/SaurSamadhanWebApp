@model WebApp.Models.AnalyticsModel
@using System.Security.Claims
@{
    ViewData["Title"] = "Dashboard";
}
@section VendorStyles {
    <link rel="stylesheet" href="~/vendor/libs/apex-charts/apex-charts.css" />
}
@section VendorScripts {
    <script src="~/vendor/libs/apex-charts/apexcharts.js"></script>
}
@section PageScripts {
    @* <script src="~/js/dashboards-analytics.js"></script> *@
}

@* ************** Content ************** *@

<div class="row">
    <div class="col-lg-8 mb-4 order-0">
        <div class="card h-100">
            <div class="d-flex align-items-end row">
                <div class="col-sm-7">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Congratulations  @User.FindFirst(ClaimTypes.Name)?.Value! 🎉</h5>
                        <p class="mb-4">The team has successfully completed <span class="fw-medium">10</span> projects under the Saur Sujla Yojana (SSY), <span class="fw-medium">8</span> projects for the Jal Jivan Mission (JJM), and <span class="fw-medium">11</span> High Mast projects.</p>
                    </div>
                </div>
                <div class="col-sm-5 text-center text-sm-left">
                    <div class="card-body pb-0 px-0 px-md-4">
                        <img src="~/img/illustrations/solarpump.jpg" style="margin-bottom:10%" height="100" data-app-dark-img="illustrations/man-with-laptop-dark.png" data-app-light-img="illustrations/man-with-laptop-light.png">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-4 order-1">
        <div class="row">
            <div class="col-lg-6 col-md-12 col-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="card-title d-flex align-items-start justify-content-between">
                            <div class="avatar flex-shrink-0">
                                <img src="~/img/ssy.png" alt="chart success" class="rounded">
                            </div>

                        </div>
                        <span class="fw-medium d-block mb-1">Total Installed Systems </span>
                        <h3 class="card-title mb-2">@Model.TotalMonitoredSystem</h3>

                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-12 col-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="card-title d-flex align-items-start justify-content-between">
                            <div class="avatar flex-shrink-0">
                                <img src="~/img/ssy.png" class="rounded">
                            </div>

                        </div>
                        <span class="fw-medium d-block mb-1">Total Working Systems </span>
                        <h3 class="card-title mb-2">@Model.TotalWorkingSystems</h3>
                        @* <small class="text-success fw-medium"><i class='bx bx-up-arrow-alt'></i>66.33</small> *@
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Total Revenue -->
    <div class="col-12 col-lg-8 order-2 order-md-3 order-lg-2 mb-4">
        <div class="card">
            <div class="row row-bordered g-0">
                <div class="col-md-8">
                    <h5 class="card-header m-0 me-2 pb-3">Installed Projects</h5>
                    <div id="totalRevenueChart" class="px-2"></div>
                </div>
                <div class="col-md-4">
                    <div class="card-body">
                        <div class="text-center">
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" id="growthReportId" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    2024
                                </button>
                                @* <div class="dropdown-menu dropdown-menu-end" aria-labelledby="growthReportId">
                                <a class="dropdown-item" href="javascript:void(0);" onclick="updateButtonText(this,@Model.TotalGrievances)">2023</a>
                                <a class="dropdown-item" href="javascript:void(0);" onclick="updateButtonText(this,@Model.TotalGrievances)">2022</a>
                                <a class="dropdown-item" href="javascript:void(0);" onclick="updateButtonText(this,@Model.TotalGrievances)">2021</a>
                                </div> *@
                            </div>
                        </div>
                    </div>
                    <div id="growthChart"></div>
                    <div class="text-center fw-medium pt-3 mb-2" id="companyGrowth">Grievances</div>

                    <div class="d-flex px-xxl-4 px-lg-2 p-4 gap-xxl-3 gap-lg-1 gap-3 justify-content-between">
                        <div class="d-flex">
                            <div class="me-2">
                                <span class="badge bg-label-info p-2"><i class="bx bx-wallet text-info"></i></span>
                            </div>
                            <div class="d-flex flex-column">
                                <small>2022</small>
                                <h6 class="mb-0">32 Projects</h6>
                            </div>
                        </div>
                        <div class="d-flex">
                            <div class="me-2">
                                <span class="badge bg-label-info p-2"><i class="bx bx-wallet text-info"></i></span>
                            </div>
                            <div class="d-flex flex-column">
                                <small>2021</small>
                                <h6 class="mb-0">50 Projects</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--/ Total Revenue -->
    <div class="col-12 col-md-8 col-lg-4 order-3 order-md-2">
        <div class="row">
            <div class="col-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title d-flex align-items-start justify-content-between">
                            <div class="avatar flex-shrink-0">
                                <img src="~/img/icons/unicons/paypal.png" class="rounded">
                            </div>
                        </div>
                        <span class="d-block mb-1">Faulty Systems</span>
                        <h3 class="card-title text-nowrap mb-2">@Model.FaultySystems</h3>
                        @* <small class="text-danger fw-medium"><i class='bx bx-down-arrow-alt'></i> -33.33%</small> *@
                    </div>
                </div>
            </div>
            <div class="col-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title d-flex align-items-start justify-content-between">
                            <div class="avatar flex-shrink-0">
                                <img src="~/img/cg.png" class="rounded">
                            </div>

                        </div>
                        <span class="fw-medium d-block mb-1">In Progress</span>
                        <h3 class="card-title mb-2">@Model.TotalReportSubmission</h3>
                        @*  <small class="text-success fw-medium"><i class='bx bx-up-arrow-alt'></i> 30</small>
                        <small class="text-danger fw-medium"><i class='bx bx-up-arrow-alt'></i> 20</small> *@
                    </div>
                </div>
            </div>
            <div class="col-12 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between flex-sm-row flex-column gap-3">
                            <div class="d-flex flex-sm-column flex-row align-items-start justify-content-between">
                                <div class="card-title">
                                    <h5 class="text-nowrap mb-2">Total Grievances</h5>
                                </div>
                                <div>
                                    <div class="mt-sm-auto">
                                        <h3 id="totalGrievances" class="mb-0">@Model.TotalGrievances</h3>
                                        <small class="text-success fw-medium"><i class='bx bx-up-arrow-alt'></i>1 Verified</small><br />
                                        <small class="text-warning fw-medium"><i class='bx bx-up-arrow-alt'></i>1 Inprogress</small><br />
                                        <small class="text-danger fw-medium"><i class='bx bx-up-arrow-alt'></i>0 Open</small>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div id="profileReportChart"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>


<script src="~/js/dashboards-analytics.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var totalGrievances = @Html.Raw(Json.Serialize(Model.TotalGrievances));
        growthChart(totalGrievances);
    });
</script>



